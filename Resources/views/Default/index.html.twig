{% extends "BackendBundle::base.html.twig" %}

{% block title %}Boson Administration{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/backend/node_modules/animate.css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/backend/node_modules/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/backend/node_modules/mdi/css/materialdesignicons.min.css') }}">

    <link rel="stylesheet"
          href="{{ asset('bundles/backend/node_modules/angular-loading-bar/build/loading-bar.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/backend/node_modules/angular-material/angular-material.min.css') }}">
    <link rel="stylesheet"
          href="{{ asset('bundles/backend/node_modules/angular-material-data-table/dist/md-data-table.min.css') }}">
    <link rel="stylesheet"
          href="{{ asset('bundles/backend/node_modules/angular-toastr/dist/angular-toastr.min.css') }}">

    <link rel="stylesheet" href="{{ asset('bundles/backend/css/font.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/backend/css/app.css') }}">
{% endblock %}

{% block body %}
    <div class="app" ng-app="app" ng-controller="AppCtrl" ui-view="" layout="row">
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script src="{{ asset('bundles/backend/lib/highlight/highlight.pack.js') }}"></script>

    <!-- Angular -->
    <script src="{{ asset('bundles/backend/node_modules/angular/angular.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-animate/angular-animate.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-aria/angular-aria.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-messages/angular-messages.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-resource/angular-resource.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-material/angular-material.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-material-data-table/dist/md-data-table.min.js') }}"></script>

    <!-- Vendor -->
    <script src="{{ asset('bundles/backend/node_modules/angular-ui-router/release/angular-ui-router.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/oclazyload/dist/ocLazyLoad.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-loading-bar/build/loading-bar.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/node_modules/angular-toastr/dist/angular-toastr.tpls.min.js') }}"></script>

    <script>
        var urlAsset = "{{ asset('') }}";
    </script>

    <!-- App -->
    <script src="{{ path('backend_app') }}"></script>
    <script src="{{ path('backend_config') }}"></script>
    <script src="{{ path('backend_router') }}"></script>
    {% for route in config_routes %}
        <script src="{{ path(route) }}"></script>
    {% endfor %}

    <script src="{{ asset('bundles/backend/app/controllers/AppCtrl.js') }}"></script>

    <script src="{{ asset('bundles/backend/app/directives/ui-nav.js') }}"></script>
    <script src="{{ asset('bundles/backend/app/directives/ng-autofocus.js') }}"></script>
{% endblock %}

